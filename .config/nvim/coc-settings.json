{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index", "--clang-tidy"],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".git/",
                ".hg/"
            ],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    },
    "diagnostic.enable": true,
    "python.jediEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true
}
