snippet begin "Begin-End pair"
\begin{${1:env}}
    ${VISUAL}
\end{$1}
endsnippet

snippet mdframed "Mdframed with defaults"
\begin{mdframed}[userdefinedwidth=${1:0.7}\textwidth, align=center, frametitle=$2, frametitlerulewidth=1pt]
    ${VISUAL}
\end{mdframed}
endsnippet

