snippet normpar "Make paragraphs look normal"
\setlength\parindent{0pt}
\setlength\parskip{0.5em}
endsnippet

snippet perms_n_comb "Permutation and Combination commands"
\newcommand\mathperm[2][^n]{\prescript{#1\mkern-2.5mu}{}P_{#2}}
\newcommand\mathcomb[2][^n]{\prescript{#1\mkern-0.5mu}{}C_{#2}}
endsnippet

snippet argminmax "Add argmax and argmin commands"
\DeclareMathOperator*{\argmax}{arg\,max}
\DeclareMathOperator*{\argmin}{arg\,min}
endsnippet

snippet hyperref "URL formatting options"
\usepackage{hyperref}
\hypersetup{%
    colorlinks=true,
    linkcolor=cyan,
    filecolor=magenta,
    urlcolor=cyan,
}
endsnippet

